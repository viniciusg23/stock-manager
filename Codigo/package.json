{
  "name": "complemento-src",
  "version": "1.0.0",
  "description": "Mantenha neste diretório todo o código do projeto. Se necessário, descreva neste arquivo aspectos relevantes da estrutura de diretórios criada para organização do código.",
  "main": "App.js",
  "scripts": {
    "test": "set ENV=test && vitest",
    "setup": "npm i && npm i --prefix client",
    "lint": "eslint . --fix",
    "dev": "set ENV=development && concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "dev-server": "set ENV=development && ts-node-dev --respawn --transpile-only ./src/App.ts",
    "dev-client": "npm run start --prefix client",
    "build-server": "tsc",
    "build-client": "npm run build --prefix client",
    "win-build": "npm run setup && npm run build-server && npm run build-client && npm run win-move-build",
    "win-move-build": "xcopy /s /y client\\build dist\\src\\client\\",
    "win-prod": "npm run win-build && node ./dist/src/App.js",
    "build": "npm run setup && npm run build-server && npm run build-client && npm run move-build",
    "move-build": "cp -r client/build dist/src/client/",
    "prod": "npm run build && node ./dist/src/App.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.9",
    "dotenv": "^16.3.1",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.4.4",
    "morgan": "^1.10.0",
    "qrcode": "^1.5.3",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.8.10",
    "@types/qrcode": "^1.5.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.1",
    "cors": "^2.8.5",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.5"
  }
}
